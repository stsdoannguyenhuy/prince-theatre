<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="70dp"
    android:layout_gravity="center">

    <ProgressBar
        android:id="@+id/progress_loading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/ic_progressbar"
        android:indeterminateDuration="1000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Loading..."
        android:textColor="#ff00ff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/progress_loading"
        app:layout_constraintLeft_toRightOf="@+id/progress_loading"
        app:layout_constraintTop_toTopOf="@+id/progress_loading" />

</androidx.constraintlayout.widget.ConstraintLayout>