<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ComparisonActivity">
    <androidx.appcompat.widget.SearchView
        android:id="@+id/comparison_search_film"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        app:queryHint="The film name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/comparison_guideline_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>
    <TextView
        android:id="@+id/comparison_txt_film_world"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/comparison_guideline_half"
        android:text="@string/film_world"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/comparison_search_film"/>
    <TextView
        android:id="@+id/comparison_txt_film_world_nothing_to_show"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/comparison_guideline_half"
        android:text="@string/film_is_not_available"
        android:textAllCaps="true"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/comparison_txt_film_world"
        android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comparison_list_film_world"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="LinearLayoutManager"
        android:paddingEnd="1sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/comparison_guideline_half"
        app:layout_constraintTop_toBottomOf="@+id/comparison_txt_film_world"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <!--Cinema world-->
    <TextView
        android:id="@+id/comparison_txt_cinema_world"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/comparison_guideline_half"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/cinema_world"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/comparison_search_film"/>
    <TextView
        android:id="@+id/comparison_txt_cinema_world_nothing_to_show"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/comparison_guideline_half"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/film_is_not_available"
        android:textAllCaps="true"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/comparison_txt_cinema_world"
        android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comparison_list_cinema_world"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="LinearLayoutManager"
        android:paddingStart="1sp"
        app:layout_constraintLeft_toLeftOf="@+id/comparison_guideline_half"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comparison_txt_cinema_world"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>